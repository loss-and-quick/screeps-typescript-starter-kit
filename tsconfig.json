{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ES6"],
    "target": "ES6",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "esModuleInterop":true,
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "exclude": [
    "node_modules"
  ]
}